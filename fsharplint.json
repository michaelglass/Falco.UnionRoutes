{
  "ignoreFiles": [
    "**/obj/**/*.fs",
    "**/bin/**/*.fs",
    "**/.paket/**/*.fs",
    "**/packages/**/*.fs",
    "**/paket-files/**/*.fs"
  ],
  "global": {
    "numIndentationSpaces": 4
  },
  "typedItemSpacing": {
    "enabled": true,
    "config": {
      "typedItemStyle": "SpaceAfter"
    }
  },
  "typeParameters": {
    "enabled": false
  },
  "typography": {
    "enabled": true,
    "config": {
      "indentation": {
        "enabled": true
      },
      "maxCharactersOnLine": {
        "enabled": true,
        "maxCharacters": 120
      },
      "trailingWhitespaceOnLine": {
        "enabled": true,
        "numberOfSpacesAllowed": 0
      },
      "maxLinesInFile": {
        "enabled": true,
        "maxLines": 1000
      },
      "trailingNewLineInFile": {
        "enabled": true
      },
      "noTabCharacters": {
        "enabled": true
      }
    }
  },
  "conventions": {
    "enabled": true,
    "config": {
      "recursiveAsyncFunction": {
        "enabled": true
      },
      "redundantNewKeyword": {
        "enabled": true
      },
      "nestedStatements": {
        "enabled": true,
        "depth": 8
      },
      "reimplementsFunction": {
        "enabled": true
      },
      "canBeReplacedWithComposition": {
        "enabled": true
      },
      "raiseWithTooManyArgs": {
        "enabled": true
      },
      "sourceLength": {
        "enabled": true,
        "maxLines": 500
      },
      "favour_ignore_over_let_wild": {
        "enabled": true
      },
      "tupleOfWildcards": {
        "enabled": true
      },
      "wildcardNamedWithAsPattern": {
        "enabled": true
      },
      "uselessBinding": {
        "enabled": true
      },
      "interfaceNames": {
        "enabled": true,
        "config": {
          "naming": "PascalCase",
          "underscores": "None",
          "prefix": "I"
        }
      },
      "exceptionNames": {
        "enabled": true,
        "config": {
          "naming": "PascalCase",
          "underscores": "None",
          "suffix": "Exception"
        }
      },
      "typeNames": {
        "enabled": true,
        "config": {
          "naming": "PascalCase",
          "underscores": "None"
        }
      },
      "recordFieldNames": {
        "enabled": true,
        "config": {
          "naming": "PascalCase",
          "underscores": "None"
        }
      },
      "enumCasesNames": {
        "enabled": true,
        "config": {
          "naming": "PascalCase",
          "underscores": "None"
        }
      },
      "unionCasesNames": {
        "enabled": true,
        "config": {
          "naming": "PascalCase",
          "underscores": "None"
        }
      },
      "moduleNames": {
        "enabled": true,
        "config": {
          "naming": "PascalCase",
          "underscores": "None"
        }
      },
      "literalNames": {
        "enabled": true,
        "config": {
          "naming": "PascalCase",
          "underscores": "AllowAny"
        }
      },
      "namespaceNames": {
        "enabled": true,
        "config": {
          "naming": "PascalCase",
          "underscores": "None"
        }
      },
      "memberNames": {
        "enabled": true,
        "config": {
          "naming": "PascalCase",
          "underscores": "AllowPrefix"
        }
      },
      "parameterNames": {
        "enabled": true,
        "config": {
          "naming": "CamelCase",
          "underscores": "AllowPrefix"
        }
      },
      "measureTypeNames": {
        "enabled": true,
        "config": {
          "underscores": "None"
        }
      },
      "activePatternNames": {
        "enabled": true,
        "config": {
          "naming": "PascalCase",
          "underscores": "None"
        }
      },
      "publicValuesNames": {
        "enabled": true,
        "config": {
          "naming": "CamelCase",
          "underscores": "AllowPrefix"
        }
      },
      "privateValuesNames": {
        "enabled": true,
        "config": {
          "naming": "CamelCase",
          "underscores": "AllowPrefix"
        }
      }
    }
  },
  "formatting": {
    "enabled": true,
    "config": {
      "tupleFormatting": {
        "enabled": true
      },
      "patternMatchFormatting": {
        "enabled": true
      },
      "tupleCommaSpacing": {
        "enabled": false
      },
      "tupleIndentation": {
        "enabled": false
      },
      "tupleParentheses": {
        "enabled": false
      }
    }
  },
  "hints": {
    "enabled": true,
    "add": [
      "not (a =  b) ===> a <> b",
      "not (a <> b) ===> a =  b",
      "not (a >  b) ===> a <= b",
      "not (a >= b) ===> a <  b",
      "not (a <  b) ===> a >= b",
      "not (a <= b) ===> a >  b",
      "compare x y <> 1 ===> x <= y",
      "compare x y = -1 ===> x < y",
      "compare x y <> -1 ===> x >= y",
      "compare x y = 1 ===> x > y",
      "List.head (List.sort x) ===> List.min x",
      "List.head (List.sortBy f x) ===> List.minBy f x",
      "List.map f (List.map g x) ===> List.map (g >> f) x",
      "Array.map f (Array.map g x) ===> Array.map (g >> f) x",
      "Seq.map f (Seq.map g x) ===> Seq.map (g >> f) x",
      "List.nth x 0 ===> List.head x",
      "List.map f (List.replicate n x) ===> List.replicate n (f x)",
      "List.rev (List.rev x) ===> x",
      "Array.rev (Array.rev x) ===> x",
      "List.fold (@) [] x ===> List.concat x",
      "List.map id x ===> x",
      "Array.map id x ===> x",
      "Seq.map id x ===> x",
      "(List.length x) = 0 ===> List.isEmpty x",
      "(Array.length x) = 0 ===> Array.isEmpty x",
      "(Seq.length x) = 0 ===> Seq.isEmpty x",
      "x = [] ===> List.isEmpty x",
      "x = [||] ===> Array.isEmpty x",
      "(List.length x) <> 0 ===> not (List.isEmpty x)",
      "(Array.length x) <> 0 ===> not (Array.isEmpty x)",
      "(Seq.length x) <> 0 ===> not (Seq.isEmpty x)",
      "(List.length x) > 0 ===> not (List.isEmpty x)",
      "(Array.length x) > 0 ===> not (Array.isEmpty x)",
      "(Seq.length x) > 0 ===> not (Seq.isEmpty x)"
    ]
  },
  "numberOfItems": {
    "enabled": true,
    "config": {
      "maxItems": 6
    }
  },
  "binding": {
    "enabled": true,
    "config": {
      "favourIgnoreOverLetWild": {
        "enabled": true
      },
      "wildcardNamedWithAsPattern": {
        "enabled": true
      },
      "uselessBinding": {
        "enabled": true
      },
      "tupleOfWildcards": {
        "enabled": true
      },
      "favourTypedIgnore": {
        "enabled": true
      },
      "favourReRaise": {
        "enabled": true
      }
    }
  }
}
